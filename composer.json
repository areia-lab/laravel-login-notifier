{
    "name": "areia-lab/laravel-login-notifier",
    "description": "Laravel package to notify users of logins from new devices or IP addresses for enhanced security.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "login",
        "security",
        "notifier",
        "login-notification",
        "device-detection",
        "ip-detection",
        "2fa",
        "user-authentication",
        "account-protection"
    ],
    "authors": [
        {
            "name": "Areia Lab",
            "email": "support@areiatech.com",
            "homepage": "https://areiatech.com",
            "role": "Owner"
        }
    ],
    "support": {
        "issues": "https://github.com/areia-lab/laravel-login-notifier/issues",
        "source": "https://github.com/areia-lab/laravel-login-notifier"
    },
    "require": {
        "php": "^8.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "jenssegers/agent": "^2.6",
        "stevebauman/location": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "AreiaLab\\LoginNotifier\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AreiaLab\\LoginNotifier\\LoginNotifierServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
